@import "bourbon";
@import "neat";
@import "books";
@import "scaffolds";
@import "articles";


html, body {
  background: black;
  margin:0;
  padding:0;
}

body.animated, body.fadeIn {
  -webkit-animation-duration: 5s;
}

@font-face {
    font-family: 'league_gothicregular';
    src: url('leaguegothic-regular-webfont.eot');
    src: url('leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('leaguegothic-regular-webfont.woff2') format('woff2'),
         url('leaguegothic-regular-webfont.woff') format('woff'),
         url('leaguegothic-regular-webfont.ttf') format('truetype'),
         url('leaguegothic-regular-webfont.svg#league_gothicregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'october_crowregular';
    src: url('october_crow-webfont.eot');
    src: url('october_crow-webfont.eot?#iefix') format('embedded-opentype'),
         url('october_crow-webfont.woff2') format('woff2'),
         url('october_crow-webfont.woff') format('woff'),
         url('october_crow-webfont.ttf') format('truetype'),
         url('october_crow-webfont.svg#october_crowregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'silverfakeregular';
    src: font-url('silverfake-webfont.eot');
    src: font-url('silverfake-webfont.eot?#iefix') format('embedded-opentype'),
         font-url('silverfake-webfont.woff2') format('woff2'),
         font-url('silverfake-webfont.woff') format('woff'),
         font-url('silverfake-webfont.ttf') format('truetype'),
         font-url('silverfake-webfont.svg#silverfakeregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

#background {
  background: url('<%= asset_path("main_background.jpg") %>');
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-attachment: fixed;
  min-height: 30em;
}

#main {

  nav {

    img {
      width: 107px;
      position: fixed;
      z-index: 5;
      float: left;
      border: 0px 3px solid black;
    }

    .show {
      display: block;

      li {
        display: block;
        margin: auto;
      }
    }

    ul {
      text-align: center;
      padding: 0;
      margin: 0;

      li {
        font-family: 'league_gothicregular', sans-serif;
        font-size: 2em;
        line-height: 40px;
        height: 40px;
        border-bottom: 1px solid #888;
        display: inline;
        margin: auto 3%;

          a {
            text-decoration: none;
            color: #fff;
          }

          a:hover {
            background-color: darkred;
          }

          a.current {
            border-bottom: 5px solid white;
          }
      }
    }
  }

  a#i-nav {
    background-image: url('<%= asset_path("button.png") %>');
    background-repeat: no-repeat;
    background-size: cover;
    display: none;
    position: absolute;
    top: 20px;
    right: 30px;
    width: 50px;
    height: 33px;
    z-index: 50;
    box-shadow: 2px 2px 2px 2px black;
    border-radius: 3px;
  }

  h1.title {
    font-family: 'october_crowregular';
    text-align: center;
    font-size: 5.5vw;
    line-height: 80px;
    color: white;
    letter-spacing: 15px;
    background: rgb(41, 21, 114);
    text-shadow: 4px 4px 2px black;
    margin: 12px auto auto;
    padding-left: 15px;
    z-index: 20;
    width: 100%;

    #hidden-favicon {
      display: none;
    }
  }

  img {
    float: right;
    border-right: 2.5px solid black;
    border-bottom: 2.5px solid black;
  }
}



@media (max-width: 975px) {

  #poe-image {
    display: none;
  }

  #main h1.title {
    padding-left: 0;
  }

}

@media (max-width: 600px) {

  #main h1.title {
    position: fixed;
    margin-top: 0px;
    margin-left: 0;
    padding: auto;
    text-align: left;
    padding-left: 25px;
  }

  #main nav {
    padding-left: 0;
    margin-left: 0;

    ul {
      display: none;
      li {
        display: block;
      }
    }
  }
  #main a#i-nav {
    display: inline;
    margin: auto 2.5%;
  }

}

@media only screen
    and (min-device-width : 414px)
    and (max-device-width : 736px)
    and (device-width : 414px)
    and (device-height : 736px)
    and (orientation : portrait)
    and (-webkit-min-device-pixel-ratio : 3)
    and (-webkit-device-pixel-ratio : 3)
{

  #poe-image {
    display: none;
  }
  #main h1.title {
    position: fixed;
    margin-top: 0px;
    margin-left: 0;
    padding: auto;
    text-align: left;
    padding-left: 25px;
  }

  #main nav {
    padding-left: 0;
    margin-left: 0;

    ul {
      display: none;
      li {
        display: block;
      }
    }
  }
  #main a#i-nav {
    display: inline;
    margin: auto 2.5%;
  }
}
