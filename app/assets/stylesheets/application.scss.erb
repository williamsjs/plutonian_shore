@import "bourbon";
@import "neat";
@import "books";
@import "scaffolds";


html, body {
  background: black;
  margin:0;
  padding:0;
}

body.animated, body.fadeIn {
  -webkit-animation-duration: 5s;
}

@font-face {
    font-family: 'league_gothicregular';
    src: url('leaguegothic-regular-webfont.eot');
    src: url('leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('leaguegothic-regular-webfont.woff2') format('woff2'),
         url('leaguegothic-regular-webfont.woff') format('woff'),
         url('leaguegothic-regular-webfont.ttf') format('truetype'),
         url('leaguegothic-regular-webfont.svg#league_gothicregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

#background {
  background: url('<%= asset_path("main_background.jpg") %>');
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  min-height: 65em;
}

@font-face {
    font-family: 'silverfakeregular';
    src: font-url('silverfake-webfont.eot');
    src: font-url('silverfake-webfont.eot?#iefix') format('embedded-opentype'),
         font-url('silverfake-webfont.woff2') format('woff2'),
         font-url('silverfake-webfont.woff') format('woff'),
         font-url('silverfake-webfont.ttf') format('truetype'),
         font-url('silverfake-webfont.svg#silverfakeregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

#main {
  nav {
    img {
      width: 107px;
      position: fixed;
      z-index: 5;
      float: left;
      border: 0px 3px solid black;
    }
    ul {
      list-style: none;
      text-align: center;
      padding: 0;
      margin: 0;

      li {
        font-family: 'league_gothicregular', sans-serif;
        font-size: 2em;
        line-height: 40px;
        height: 40px;
        border-bottom: 1px solid #888;
        display: inline;
        margin: auto 3%;

          a {
            text-decoration: none;
            color: #fff;
          }
          a:hover {
            background-color: darkred;
          }
          a.current {
            border-bottom: 5px solid white;
          }
      }
    }
  }

  h1.title {
    font-family: 'silverfakeregular';
    text-align: center;
    font-size: 5.5vw;
    line-height: 80px;
    color: #BBB;
    background: rgb(41, 21, 114);
    text-shadow: 4px 4px 2px black;
    margin: 12px auto auto;
    padding-left: 15px;
    z-index: -1;
    width: 100%;
  }

  img {
    float: right;
    border-right: 2.5px solid black;
    border-bottom: 2.5px solid black;
  }
}

$parallax-window-height: 20em;
$parallax-background-height: $parallax-window-height * 2;

.parallax-window {
  height: $parallax-window-height;
  overflow: hidden;
  position: relative;
  text-align: center;
  width: 100%;
}

.parallax-static-content {
  color: #9A9A8A;
  position: relative;
  z-index: 9;
}

.parallax-background {
  background:
    /* bottom, image */
  asset_url('main_background.jpg');
  background-size: 100%;
  //height: 700px;
  padding: 50px 20px 0;
  height: $parallax-background-height;
  left: 0;
  position: absolute;
  top: - $parallax-window-height / 3;
  width: 100%;
}

@media (max-width: 975px) {
  #poe-image {
    display: none;
  }
}

